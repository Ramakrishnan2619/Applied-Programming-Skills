class Solution {
    public int[] getSumAbsoluteDifferences(int[] nums) {
        int n=nums.length;

        /*presum*/
        int[] presum=new int[n];
        for(int i=1;i<n;i++){
            presum[i]=presum[i-1]+nums[i-1];
        }

        int[] postsum=new int[n];
        for(int i=n-2;i>=0;i--){
            postsum[i]=postsum[i+1]+nums[i+1];
        }
        /*Finally we do left plus right */
        int[] sum=new int[n];
        for(int i=0;i<n;i++){
            int left=nums[i]*i - presum[i];
            int right=postsum[i]- nums[i]*(n-i-1);
            sum[i]=left+right;
        }
        return sum;
    }
}
